<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RentalsFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/center_vertical_ref_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/center_horizontal_ref_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_select_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="select city"
            android:fontFamily="@font/bungee"
            android:textSize="45sp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img_mumbai"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/center_horizontal_ref_line"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/center_vertical_ref_line"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/img_mumbai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/img_mumbai"></ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img_hyderabad"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@+id/center_vertical_ref_line"
            android:layout_above="@+id/center_horizontal_ref_line"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/img_hyderabad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/img_hyderabad">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img_chennai"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toStartOf="@+id/center_vertical_ref_line"
            android:layout_below="@+id/center_horizontal_ref_line"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/img_chennai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/img_chennai">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img_banglore"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@+id/center_vertical_ref_line"
            android:layout_below="@+id/center_horizontal_ref_line"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/img_banglore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/img_bangalore">
            </ImageView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</FrameLayout>