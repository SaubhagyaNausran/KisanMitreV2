<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:elevation="100dp">

        <TextView
            android:id="@+id/textViewDeHaatServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kissan Mitre Services"
            android:textSize="24sp"
            android:textColor="#000"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDeHaatServices"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- First GridLayout "page" -->
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:padding="8dp">

                    <!-- Creating six frames (3x2) -->
                    <!-- Repeat this FrameLayout structure for each item -->
                    <!-- Frame 1 -->
                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/cloudy"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Weather"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/news"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Agri Info"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/mandiimage"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Mandi"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                    </FrameLayout>




                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/rentalsbg"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Rentals"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                    </FrameLayout>
                    <!-- Frame 2 -->
                    <!-- ... Repeat similar FrameLayout for other items ... -->

                    <!-- Frame 6 -->
                    <!-- ... -->

                </GridLayout>

                <!-- Second GridLayout "page" -->
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:padding="8dp">


                    <!-- Frame 1 -->
                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"

                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/youtube"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Videos"
                            android:textSize="20sp"
                            android:textColor="@color/black"/>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/profile"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Item 1"
                            android:textSize="20sp"
                            android:textColor="@color/black"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/frame_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:src="@drawable/profile"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="85dp"
                            android:layout_marginBottom="5dp"
                            android:text="Item 1"
                            android:textSize="20sp"
                            android:textColor="@color/black"/>
                    </FrameLayout>




                </GridLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">

                <TextView
                    android:id="@+id/rentalservicesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Services"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame_border"
                    android:layout_below="@+id/rentalservicesTV">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/rentalservicesIV"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/harvester"
                            android:scaleType="centerCrop"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnRentals"
                            android:text="Book and Lend Equipments"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"/>

                    </LinearLayout>

                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp">

                <TextView
                    android:id="@+id/rentalservicesTV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Services"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/frame_border"
                    android:layout_below="@+id/rentalservicesTV1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/rentalservicesIV1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/harvester"
                            android:scaleType="centerCrop"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnCropPrediction"
                            android:text="Book and Lend Equipments"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"/>

                    </LinearLayout>

                </FrameLayout>
            </RelativeLayout>






        </LinearLayout>



    </ScrollView>
</FrameLayout>
