<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MandiFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="24sp"
            android:text="Today Mandi Price"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView_indian_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="State*"
            android:textSize="16sp"
            android:textColor="#000000"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Spinner
            android:id="@+id/spinner_indian_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textView_indian_states"
            android:background="@drawable/spinner_background"
            android:popupBackground="#f0f0f0" />

        <TextView
            android:id="@+id/textView_indian_districts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_indian_states"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="District*"
            android:textSize="16sp"
            android:textColor="#000000"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Spinner
            android:id="@+id/spinner_indian_districts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textView_indian_districts"
            android:background="@drawable/spinner_background"
            android:popupBackground="#f0f0f0" />

        <TextView
            android:id="@+id/textView_crop_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_indian_districts"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Crop*"
            android:textSize="16sp"
            android:textColor="#000000"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <Spinner
            android:id="@+id/spinner_crop_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textView_crop_selection"
            android:background="@drawable/spinner_background"
            android:popupBackground="#f0f0f0" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_crop_selection"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Submit"
            android:background="@drawable/button_background"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/minPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_search"
            android:layout_marginTop="20dp"
            android:text="MinPrice"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maxPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/minPriceTV"
            android:layout_marginTop="20dp"
            android:text="MaxPrice"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mandiTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxPriceTV"
            android:layout_marginTop="20dp"
            android:text="Mandi Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Continue enhancing other UI elements as needed, keeping their placement and IDs unchanged. -->

    </RelativeLayout>
    <!-- End of Relative Layout -->

</FrameLayout>
